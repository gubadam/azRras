          },
          "snetId": {
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VnetParameters').vnetName, parameters('VnetParameters').subnetName)]"
          },
          "adminUsername": {
            "value": "[parameters('NPSParameters').adminUsername]"
          },
          "adminPassword": {
            "value": "[parameters('NPSParameters').adminPassword]"
          }
        }
			}
		},
    {
      "name": "vmNPS/createNPS",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2021-03-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "vmNPS/createNPS"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', 'vmNPS')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
        "type": "DSC",
        "typeHandlerVersion": "2.9",
        "autoUpgradeMinorVersion": true,
        "settings": {
          "modulesUrl": "[concat('artifactsLocation', '/DSCModules/dsc.zip')]",
          "sasToken": "artifactsLocationSasToken",
          "configurationFunction": "Configure"
        },
        "protectedSettings": {}
      }
    },
		{
			"name": "vmRRAS",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2021-04-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"relativePath": "./templates/vm.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
          "vmName": {
            "value": "[parameters('RRASParameters').vmName]"
          },
          "vmIp": {
            "value": "[parameters('RRASParameters').ipAddress]"
          },
          "snetId": {
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VnetParameters').vnetName, parameters('VnetParameters').subnetName)]"
          },
          "adminUsername": {
            "value": "[parameters('RRASParameters').adminUsername]"
          },
          "adminPassword": {
            "value": "[parameters('RRASParameters').adminPassword]"
          }
        }
			}
		},
    {
      "name": "vmRRAS/createRRAS",
      "type": "Microsoft.Compute/virtualMachines/extensions",
      "apiVersion": "2021-03-01",
      "location": "[resourceGroup().location]",
      "tags": {
        "displayName": "vmRRAS/createRRAS"
      },
      "dependsOn": [
        "[resourceId('Microsoft.Compute/virtualMachines', 'vmRRAS')]"
      ],
      "properties": {
        "publisher": "Microsoft.Powershell",
