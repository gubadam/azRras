{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
	"contentVersion": "1.0.0.0",
	"parameters": {
    "VnetParameters": {
      "type": "object",
      "defaultValue": {
        "vnetName": "vnet-rras-01",
        "vnetIPRange": "10.0.0.0/16",
        "subnetName": "snet-rras-01",
        "subnetIPRange": "10.0.0.0/24",
        "adminUsername": "adminUsername",
        "adminPassword": "adminPassword"
      }
    },
		"ADDSParameters": {
			"type": "object",
			"defaultValue": {
        "vmName": "vmAdds",
        "dnsPrefix": "ad.local",
        "ipAddress": "10.0.0.4",
        "adminUsername": "adminUsername",
        "adminPassword": "adminPassword"
      }
		},
		"ADCSParameters": {
			"type": "object",
			"defaultValue": {
        "vmName": "vmAdcs",
        "ipAddress": "10.0.0.5",
        "adminUsername": "adminUsername",
        "adminPassword": "adminPassword"
      }
		},
		"NPSParameters": {
			"type": "object",
			"defaultValue": {
        "vmName": "vmNps",
        "ipAddress": "10.0.0.6",
        "adminUsername": "adminUsername",
        "adminPassword": "adminPassword"
      }
		},
		"RRASParameters": {
			"type": "object",
			"defaultValue": {
        "vmName": "vmRras",
        "ipAddress": "10.0.0.7",
        "adminUsername": "adminUsername",
        "adminPassword": "adminPassword"
      }
    }
	},
	"resources": [
		{
			"name": "vnet",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2021-04-01",
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"relativePath": "templates/vnet.json"
				},
				"parameters": {
          "vnetName": {
              "value": "[parameters('VnetParameters').vnetName]"
          },
          "vnetIPRange": {
              "value": "[parameters('VnetParameters').vnetIPRange]"
          },
          "snetName": {
              "value": "[parameters('VnetParameters').subnetName]"
          },
          "snetIPRange": {
              "value": "[parameters('VnetParameters').subnetIPRange]"
          }
				}
			}
		},
		{
			"name": "vmADDS",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2021-04-01",
			"dependsOn": ["vnet"],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"relativePath": "templates/vm.json"
				},
				"parameters": {
          "vmName": {
            "value": "[parameters('ADDSParameters').vmName]"
          },
          "vmIp": {
            "value": "[parameters('ADDSParameters').ipAddress]"
          },
          "snetId": {
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VnetParameters').vnetName, parameters('VnetParameters').subnetName)]"
          },
          "adminUsername": {
            "value": "[parameters('ADDSParameters').adminUsername]"
          },
          "adminPassword": {
            "value": "[parameters('ADDSParameters').adminPassword]"
          }
				}
			}
		},
		{
			"name": "vmADCS",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2021-04-01",
      "dependsOn": ["vnet"],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"relativePath": "templates/vm.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
          "vmName": {
            "value": "[parameters('ADCSParameters').vmName]"
          },
          "vmIp": {
            "value": "[parameters('ADCSParameters').ipAddress]"
          },
          "snetId": {
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VnetParameters').vnetName, parameters('VnetParameters').subnetName)]"
          },
          "adminUsername": {
            "value": "[parameters('ADCSParameters').adminUsername]"
          },
          "adminPassword": {
            "value": "[parameters('ADCSParameters').adminPassword]"
          }
        }
			}
		},
		{
			"name": "vmNPS",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2021-04-01",
      "dependsOn": ["vnet"],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"relativePath": "templates/vm.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
          "vmName": {
            "value": "[parameters('NPSParameters').vmName]"
          },
          "vmIp": {
            "value": "[parameters('NPSParameters').ipAddress]"
          },
          "snetId": {
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VnetParameters').vnetName, parameters('VnetParameters').subnetName)]"
          },
          "adminUsername": {
            "value": "[parameters('NPSParameters').adminUsername]"
          },
          "adminPassword": {
            "value": "[parameters('NPSParameters').adminPassword]"
          }
        }
			}
		},
		{
			"name": "vmRRAS",
			"type": "Microsoft.Resources/deployments",
			"apiVersion": "2021-04-01",
      "dependsOn": ["vnet"],
			"properties": {
				"mode": "Incremental",
				"templateLink": {
					"relativePath": "templates/vm.json",
					"contentVersion": "1.0.0.0"
				},
				"parameters": {
          "vmName": {
            "value": "[parameters('RRASParameters').vmName]"
          },
          "vmIp": {
            "value": "[parameters('RRASParameters').ipAddress]"
          },
          "snetId": {
            "value": "[resourceId('Microsoft.Network/virtualNetworks/subnets', parameters('VnetParameters').vnetName, parameters('VnetParameters').subnetName)]"
          },
          "adminUsername": {
            "value": "[parameters('RRASParameters').adminUsername]"
          },
          "adminPassword": {
            "value": "[parameters('RRASParameters').adminPassword]"
          }
        }
			}
		}
	]
}